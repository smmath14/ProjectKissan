@model IEnumerable<KissanSarthiPro.Models.FarmInfo>

@{
    ViewData["Title"] = "FarmInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>

<head>
    <style>
        table,th,td{
            border: 2px solid black;
        }
        .table > thead > tr > th {
            vertical-align: bottom;
            border-bottom: 2px solid #0f0f0f ;
        }
    </style>
</head>
<body style="background-image:url(https://img.freepik.com/free-photo/farmland_1112-1235.jpg?w=740&t=st=1684213244~exp=1684213844~hmac=7e4e9a23c4dd7a79b4efc5e1d3e74f1634f8fa32c0b621f29a4f765e991b1262); background-repeat: no-repeat; background-size: 100% 170%;">

    <h2>Farm Info </h2>

    <p>
        <button class="btn-success">
            @Html.ActionLink("Create Another farm", "FarmCreate", new { id = TempData["Id"] }, new { @style = "color:white" })
        </button>


    </p>
    <table class="table  table-condensed " cellpadding="0" cellspacing="0">
        <thead>
            <tr style="background-color:lightblue">
                @*<th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FarmName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pincode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FarmSize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date_of_Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Current_State)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FarmName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pincode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FarmSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date_of_Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Current_State)
                    </td>
                    <td>
                        <button class="btn-warning">
                            @Html.ActionLink("Edit", "FarmEdit", new { id = item.Id }, new { style = "color:white" }) |
                        </button>
                        <button class="btn-danger">

                            @Html.ActionLink("Delete", "FarmDelete", new { id = item.Id }, new { style = "color:white" })
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <button class="btn-primary">
            <a style="color:white" asp-controller="User" asp-action="Dashboard">Back</a>
        </button>

    </div>

</body>
</html>
